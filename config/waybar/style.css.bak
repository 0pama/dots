* {
    border: none;
    border-radius: 0px;
    font-family: "JetBrainsMono Nerd Font","JetBrainsMono Nerd Font";
    font-weight: bold;
    font-size: 10px;
    min-height: 10px;
}

@import "theme.css";

window#waybar {
    background: transparent;
}

tooltip {
    background: @main-bg;
    color: @main-fg;
    border-radius: 7px;
    border-width: 0px;
}

#workspaces button {
    box-shadow: none;
    text-shadow: none;
    padding: 0px;
    border-radius: 0px;
    margin-top: 3px;
    margin-bottom: 3px;
    margin-left: 0px;
    padding-left: 3px;
    padding-right: 3px;
    margin-right: 0px;
    color: @main-fg;
    background: transparent;
    border-bottom: 2px solid transparent;
}

#workspaces button.active {
    background: transparent;
    color: @wb-act-fg;
    border-bottom: 2px solid @wb-act-bg;
    margin-left: 3px;
    padding-left: 12px;
    padding-right: 12px;
    margin-right: 3px;
}

#workspaces button:hover {
    background: transparent;
    color: @wb-hvr-fg;
    border-bottom: 2px solid rgba(255,255,255,0.3);
}

#taskbar button {
    box-shadow: none;
    text-shadow: none;
    padding: 0px;
    border-radius: 0px;
    margin-top: 3px;
    margin-bottom: 3px;
    margin-left: 0px;
    padding-left: 3px;
    padding-right: 3px;
    margin-right: 0px;
    color: @wb-color;
    background: transparent;
    border: 1px solid transparent;
}

#taskbar button.active {
    background: transparent;
    color: @wb-act-color;
    border: 1px solid @wb-act-bg;
    margin-left: 3px;
    padding-left: 12px;
    padding-right: 12px;
    margin-right: 3px;
}

#taskbar button:hover {
    background: transparent;
    color: @wb-hvr-color;
    border: 1px solid rgba(255,255,255,0.2);
}

#tray menu * {
    min-height: 16px
}

#tray menu separator {
    min-height: 10px
}

